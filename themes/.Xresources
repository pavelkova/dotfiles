!#####
!# X #
!#####

! X config
Xcursor.size: 2

!##########
!# COLORS #
!##########

!! black
*color0:  #1a1e21
*color8:  #282c34

!! red
*color1:  #f67d7d
*color9:  #ff8484

!! green
*color2 : #cae7b9
*color10: #bcee9c

!! yellow
*color3:  #e1dd8f
*color11: #fcf8a0

!! blue
*color4:  #7cb7ff
*color12: #8bd5fc

!! magenta
*color5:  #d7bcc8
*color13: #e5c8d5

!! cyan
*color6:  #00c2e4
*color14: #8bf9f9

!! white
*color7:  #828997
*color15: #dadee3

!#########
!# URXVT #
!#########

! scrollbar
URxvt.scrollBar:	false
URxvt.scrollBar_right:	false
URxvt.scrollstyle: 	plain
URxvt.thickness:	0

! padding
URxvt.internalBorder:	25

URxvt.depth:            30
URxvt.saveLines:        10000

URxvt.foreground:       #dadee3
URxvt.background:       #1a1e21

!#########
!# FONTS #
!#########

! fonts
Xft.autohint:		1
Xft.antialias:          1
Xft.hinting:            true
Xft.hintstyle:          hintfull
Xft.lcdfilter:          lcddefault
Xft.rgba:               rgb

*URxvt.font:		xft:Victor Mono:size=10
URxvt.boldFont:         xft:Victor Mono Bold:size=10
!URxvt.lineSpace:	10
!URxvt.letterSpace:	0
